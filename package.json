{
  "name": "fjuanxxiii-portal",
  "version": "1.0.0",
  "description": "Portal web integral para la Fundación Juan XXIII - Sistema de gestión de contenido y eventos",
  "main": "server/src/server.js",
  "scripts": {
    "dev": "concurrently -n server,client -c green,blue \"npm run --prefix server dev\" \"npm run --prefix client dev\"",
    "server:dev": "npm run --prefix server dev",
    "server:start": "npm run --prefix server start",
    "client:dev": "npm run --prefix client dev",
    "client:build": "npm run --prefix client build",
    "install-all": "npm install && npm run --prefix client install && npm run --prefix server install",
    "build": "npm run client:build",
    "start": "npm run server:start",
    "deploy": "npm run build && npm run start",
    "test": "cd tests && node test-complete-login.js",
    "test:calendar": "cd tests && node test-calendario-funcional.js",
    "verify:db": "cd scripts && node verificar-bd.js",
    "verify:calendar": "cd scripts && node verificar-calendario-bd.js",
    "debug:login": "cd scripts && node diagnosticar-login.js"
  },
  "keywords": [
    "fundacion",
    "juan-xxiii",
    "educacion",
    "portal",
    "cms",
    "react",
    "nodejs",
    "mysql",
    "education"
  ],
  "author": "Fundación Juan XXIII",
  "license": "PROPRIETARY",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "globals": "^16.3.0",
    "nodemon": "^3.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Astt3r/fjuanxxiii.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0"
  },
  "optionalDependencies": {
    "bcrypt": "^6.0.0"
  }
}

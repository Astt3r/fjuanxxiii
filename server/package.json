{
  "name": "fjuanxxiii-server",
  "version": "1.0.0",
  "description": "Backend para Fundación Juan XXIII",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "cross-env NODE_ENV=development ALLOW_START_WITHOUT_DB=true nodemon src/server.js",
    "migrate": "node migrations/migrate.js",
    "migrate:dry": "node -e \"process.env.DB_HOST||=require('dotenv').config().parsed.DB_HOST; console.log('No hay dry-run real, úsalo solo como recordatorio')\"",
    "seed": "node migrations/seed.js",
    "test": "jest --runInBand",
  "lint": "eslint src --ext .js",
  "audit": "npm audit --production",
  "audit:fix": "npm audit fix --production",
  "semgrep": "semgrep scan --config auto || echo 'Semgrep finalizo con findings'"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.7",
    "sanitize-html": "^2.13.0",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.9.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "fundacion",
    "juan-xxiii",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Fundación Juan XXIII",
  "license": "MIT"
}
